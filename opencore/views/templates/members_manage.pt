<div xmlns="http://www.w3.org/1999/xhtml" 
     xmlns:tal="http://xml.zope.org/namespaces/tal"
     xmlns:metal="http://xml.zope.org/namespaces/metal"
     metal:use-macro="api.community_layout.macros['master']">

  <div metal:fill-slot="content">

    <div metal:use-macro="api.snippets.macros['status_message']"/>
    <div metal:use-macro="api.snippets.macros['error_message']"/>
    <div metal:use-macro="api.snippets.macros['actions_box']"/>
    <h1>${api.page_title}</h1>
    <p tal:content="page_description|''"/>
    
    <form id="member_invite_new" class="admin-form" action="" method="post" enctype="multipart/form-data" accept-charset="utf-8" tal:define="formprefix ''">
       
       <table id="members" class="content-listing">
        <thead>
          <tr>
            <th>Name</th>
            <th>Moderator</th>
            <th>Resend Info</th>
            <th>Remove</th>
          </tr>
        </thead>
        <tbody>
        
       <!-- 'name':mem_name,
                'title':profile.title,
                'member':True,
                'moderator':False,
                'resend':False,
                'remove':False,
                'invite':False,-->
                
      <tr tal:repeat="m defaults['members']">
        <td tal:content="m['title']"/>
        <td>
          <input tal:condition="m['member'] and not m['moderator']" type="checkbox"
              name="moderator_${m['name']}" value="True"/>
        </td>
        <td>
          <input tal:condition="m['invite']" type="checkbox"
              name="resend_${m['name']}" value="True"/>
        </td>
        <td>
          <input type="checkbox" name="remove_${m['name']}" value="True"/>
        </td>
        
      </tr>
        </tbody>
         <span tal:condition="error" class="error">
          ${error}
         </span>
      </table>
          
      <metal:resources use-macro="api.snippets.macros['submit-buttons']"/>
    </form>
    
  </div>
  
</div>

