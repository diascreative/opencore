<html xmlns="http://www.w3.org/1999/xhtml"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      metal:use-macro="api.generic_layout">

<div metal:fill-slot="content">
       
            <h1>My Mailbox</h1>

            <div class="columns">
                <div class="column column-1-4 first" tal:repeat="message messages">
                    <img src="${message.from_photo}" class="sponsor-logo" alt="" />
                </div>
                <div class="column column-3-4 last">
                    <ul class="tabs"> 
                        <li class="active"><a href="/mbox.html">Inbox (6)</a></li>
                        <li><a href="/mbox.html?mbox_type=sent">Sent</a></li>
                    </ul>
	    
	    <div tal:repeat="message messages">
		  <div id="container1">
                    Hey how was the meeting yesterday?? ${message.payload}   
		  </div>
		  <div id="container" tal:repeat="message messages">
		      <div id="avator"> <img src="${message.from_photo}" class="sponsor-logo" alt="" width='50px' height="50px" /> </div>
		      <div id="mail_info" ><a href="/profiles/${message['payload']}">${message.from_firstname}</a> - rockefeller foundation Kenya<br>5 hours ago</br></div>
			<div id="mail_body"> ${message.payload}</div>
		     
		  </div>
		 </div>
                 
                 <div id="container3">
		  <form method="post" action="">
			  <div id="mail_reply">
			      <div id="mail_reply_textarea"> 
				  <textarea id="comment.text" class="test" cols="107" rows="2" style="width: 672px">Write a Reply</textarea>
			      </div>
			 </div>
                         <div id="mail_button">
                            <div class="button-holder">
			       <input type="submit" class="button post-comment" tal:attributes="value 'reply' if api.userid else 'Send mail'"/>
			   </div>
                         </div>
		      </form> 
		  </div>
	    
	    
            
		${ messages }
          
               
