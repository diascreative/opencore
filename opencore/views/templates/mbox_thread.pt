<html xmlns="http://www.w3.org/1999/xhtml"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      metal:use-macro="api.generic_layout">

<div metal:fill-slot="content">
       
            <h1>My Mailbox</h1>

            <div class="columns">
                <div class="column column-1-4 first" tal:repeat="message messages">
                    <img src="${message.from_photo}" class="sponsor-logo" alt="" />
                </div>
                <div class="column column-3-4 last">
                    <ul class="tabs"> 
                        <li class="active"><a href="/mbox.html">Inbox (6)</a></li>
                        <li><a href="/mbox.html?mbox_type=sent">Sent</a></li>
                    </ul>
	    
	    <div>
		  <div id="container1" tal:repeat="message messages">
		  Hey how was the meeting yesterday? ${message.payload}
                   
		  </div>
		  <div id="container">
		      
		      
		      <div id="avator" tal:repeat="message messages"> <img src="${message.from_photo}" class="sponsor-logo" alt="" width='50px' height="50px" /> </div>
		      <div id="mail_info" tal:repeat="message messages"><a href="/profiles/${message['payload']}">${message.from_firstname}</a> - rockefeller foundation Kenya<br>5 hours ago</br></div>
			  
		      <div id="mail_body" tal:repeat="message messages"> ${message.payload} 
		      </div>
		     
		  </div>
		  <div id="container3">
		  <form method="post" action="">
			  <div id="mail_reply">
			      <div id="mail_reply_textarea"> 
				  <textarea id="comment.text" class="test" cols="105" rows="2" >Write a Reply</textarea>
			    	<div class="button-holder">
				    <input type="submit" class="button post-comment highlight" tal:attributes="value 'reply' if api.userid else 'Send mail'"/>
			        </div>
			  </div>
			      
			  </div>
		      </form> 
		  </div>
	    
	    </div>
            
		${ messages }
          
               
