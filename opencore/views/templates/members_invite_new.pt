<div xmlns="http://www.w3.org/1999/xhtml" 
     xmlns:tal="http://xml.zope.org/namespaces/tal"
     xmlns:metal="http://xml.zope.org/namespaces/metal"
     metal:use-macro="api.lightbox_layout">

    <tal:block metal:fill-slot="content">
        <div metal:use-macro="api.snippets.macros['actions_box']"/>

            <h4 class="main-heading">Add Members</h4>

            <p tal:content="page_description|''"/>
    
            <form id="member_invite_new" class="admin-form columns" action="" method="post" enctype="multipart/form-data" accept-charset="utf-8" tal:define="formprefix ''" target="_top">
    
                <div id="users--field" class="field users type-sequence type-container widget-input">
                    <label for="users">Users</label>
        
                    <div class="inputs">
                        <span>
                            <!-- widgets/KarlUserProfileLookup/widget.html -->
                            <input id="membersearch-input" type="text" name="users" value="" />
                        </span>
                    </div>
                </div>

                <div class="columns clearfix">
                    <div class="column column-1-2">
                        <div tal:content="structure api.render_form_widget('textarea', 'email_addresses', 'Email Addresses')"></div>
                    </div>
                    <div class="column column-1-2 last">
                        <div tal:content="structure api.render_form_widget('textarea', 'text', 'Text')"></div>
                    </div>
                </div>
        
                <metal:resources use-macro="api.snippets.macros['submit-buttons']"/>
            </form>
    </tal:block>  
</div>